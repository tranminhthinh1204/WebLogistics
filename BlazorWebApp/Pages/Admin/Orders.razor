                            <MudAvatar Size="Size.Small" Class="mr-2" Color="Color.Primary">
                                @GetCustomerInitials(context.UserId)
                            </MudAvatar>
                            <MudText Typo="Typo.body1">@GetCustomerName(context.UserId)</MudText>
                        </div>
                    </MudTd>
                    <MudTd DataLabel="Products">
                        <div>
