                Console.WriteLine($"‚úÖ Admin: Loaded {orders.Count} orders, {orderItemsCache.Count} order caches, {productNamesCache.Count} products, {customerProfiles.Count} customers");
            }
            else
            {
                // üî• Fallback n·∫øu API m·ªõi fail
                Console.WriteLine("‚ö†Ô∏è GetAllOrdersWithCompleteDetailsAsync failed, using fallback");
                var result = await OrderService.GetAllOrdersAsync();
                orders = result?.ToList() ?? new List<OrderVM>();
                
                // üî• Ch·ªâ khi fallback m·ªõi g·ªçi c√°c method c≈©
