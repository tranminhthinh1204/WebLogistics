                // üî• CH·ªà load customer profiles cho Seller (v√¨ Seller API kh√¥ng include customer info)
                await LoadCustomerProfilesFallback();
                
                Console.WriteLine($"‚úÖ Seller: Loaded {orders.Count} orders, {orderItemsCache.Count} order caches, {productNamesCache.Count} products");
            }
            else
            {
                orders = new List<OrderVM>();
            }
        }
        
    }
    catch (Exception ex)
    {
        Console.WriteLine($"‚ùå Error in LoadOrders: {ex.Message}");
