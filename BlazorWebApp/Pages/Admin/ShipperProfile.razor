</MudGrid>

<!-- Inactive Shippers Table -->
<MudGrid Class="mt-6">
    <MudItem xs="12">
        <MudPaper Elevation="0" Class="pa-4" Style="background-color: white; border-radius: 4px;">
            <MudGrid>
                <MudItem xs="12" md="8">
