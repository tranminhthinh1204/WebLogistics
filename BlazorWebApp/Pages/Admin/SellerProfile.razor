@code {
    private bool isLoadingPending = true;
    private bool isLoadingVerified = true;
    private string pendingSearchString = "";
    private string verifiedSearchString = "";
    private int pendingPageSize = 5;
    private int verifiedPageSize = 10;

    private List<SellerProfileVM> pendingSellers = new();
    private List<SellerProfileVM> verifiedSellers = new();
    private List<UserVM> allUsers = new();

    protected override async Task OnInitializedAsync()
    {
        await InitializeSignalRAsync();
        await LoadAllData();
    }

    private async Task InitializeSignalRAsync()
    {
        try
        {
            Console.WriteLine("üîî Admin SellerProfile - Initializing SignalR...");
            
            // Subscribe to SignalR events for seller profile changes
            SignalRService.SellerProfileCreated += OnSellerProfileCreated;
            SignalRService.SellerProfileUpdated += OnSellerProfileUpdated;
            SignalRService.SellerProfileDeleted += OnSellerProfileDeleted;
            SignalRService.SellerProfileVerified += OnSellerProfileVerified;
            SignalRService.SellerProfileUnverified += OnSellerProfileUnverified;

            // Start connection if not already connected
            if (!SignalRService.IsMainHubConnected)
            {
                Console.WriteLine("üîî Starting SignalR connection...");
                await SignalRService.StartConnectionAsync();
            }

            Console.WriteLine($"üîî SignalR connection status: {SignalRService.IsMainHubConnected}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error initializing SignalR: {ex.Message}");
        }
    }

    private async Task LoadAllData()
    {
        Console.WriteLine("üîÑ LoadAllData started");
        
        await Task.WhenAll(
            LoadPendingSellers(),
            LoadVerifiedSellers(),
            LoadUsers()
        );
        
        Console.WriteLine($"üîÑ LoadAllData completed - Pending: {pendingSellers.Count}, Verified: {verifiedSellers.Count}");
    }

    private async Task LoadPendingSellers()
    {
        try
        {
            Console.WriteLine("üîÑ Loading pending sellers...");
            isLoadingPending = true;
            var pendingProfiles = await SellerProfileService.GetPendingVerificationProfilesAsync();
            pendingSellers = pendingProfiles?.ToList() ?? new List<SellerProfileVM>();
            Console.WriteLine($"üîÑ Loaded {pendingSellers.Count} pending sellers");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading pending sellers: {ex.Message}");
            Snackbar.Add($"Error loading pending sellers: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoadingPending = false;
        }
    }

    private async Task LoadVerifiedSellers()
    {
        try
        {
            Console.WriteLine("üîÑ Loading verified sellers...");
            isLoadingVerified = true;
            var verifiedProfiles = await SellerProfileService.GetVerifiedSellerProfilesAsync();
            verifiedSellers = verifiedProfiles?.ToList() ?? new List<SellerProfileVM>();
            Console.WriteLine($"üîÑ Loaded {verifiedSellers.Count} verified sellers");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading verified sellers: {ex.Message}");
            Snackbar.Add($"Error loading verified sellers: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoadingVerified = false;
        }
    }

    private async Task LoadUsers()
    {
        try
        {
            var users = await UserService.GetAllUserAsync();
            allUsers = users?.ToList() ?? new List<UserVM>();
            Console.WriteLine($"üîÑ Loaded {allUsers.Count} users");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error loading users: {ex.Message}");
        }
    }

    private async Task RefreshData()
    {
        Console.WriteLine("üîÑ Manual refresh triggered");
        await LoadAllData();
        Snackbar.Add("Data refreshed successfully", Severity.Success);
    }

    // üî• IMPROVED SignalR Event Handlers v·ªõi full data synchronization
    private async void OnSellerProfileCreated(string storeName)
    {
        Console.WriteLine($"üîî Admin received SellerProfileCreated: {storeName}");
        
        await InvokeAsync(async () =>
        {
            // Reload pending sellers ƒë·ªÉ c√≥ data m·ªõi nh·∫•t
            await LoadPendingSellers();
            Snackbar.Add($"New seller application: {storeName}", Severity.Info);
            StateHasChanged();
        });
    }

    private async void OnSellerProfileUpdated(int sellerId, string storeName)
    {
        Console.WriteLine($"üîî Admin received SellerProfileUpdated: SellerId={sellerId}, StoreName={storeName}");
        
        await InvokeAsync(async () =>
        {
            try
            {
                // üî• IMPROVED: Fetch updated seller profile t·ª´ server ƒë·ªÉ c√≥ full data
                var updatedSeller = await SellerProfileService.GetSellerProfileByIdAsync(sellerId);
                if (updatedSeller != null)
                {
                    Console.WriteLine($"üîî Fetched updated seller data: {updatedSeller.StoreName}, Description: {updatedSeller.Description}");
                    
                    // Update trong pending list
                    var pendingIndex = pendingSellers.FindIndex(s => s.SellerId == sellerId);
                    if (pendingIndex >= 0)
                    {
                        pendingSellers[pendingIndex] = updatedSeller;
                        Console.WriteLine($"üîî Updated seller in pending list: {updatedSeller.StoreName}");
                    }
                    
                    // Update trong verified list
                    var verifiedIndex = verifiedSellers.FindIndex(s => s.SellerId == sellerId);
                    if (verifiedIndex >= 0)
                    {
                        verifiedSellers[verifiedIndex] = updatedSeller;
                        Console.WriteLine($"üîî Updated seller in verified list: {updatedSeller.StoreName}");
                    }
                    
                    if (pendingIndex >= 0 || verifiedIndex >= 0)
                    {
                        Snackbar.Add($"Seller profile updated: {updatedSeller.StoreName}", Severity.Info);
                    }
                    else
                    {
                        Console.WriteLine($"üîî Seller {sellerId} not found in local lists, doing full reload");
                        await LoadAllData();
                    }
                }
                else
                {
                    Console.WriteLine($"üîî Could not fetch updated seller {sellerId}, doing full reload");
                    await LoadAllData();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"‚ùå Error in OnSellerProfileUpdated: {ex.Message}");
                // Fallback: reload to√†n b·ªô data
                await LoadAllData();
            }
            
            StateHasChanged();
        });
    }

    private async void OnSellerProfileDeleted(int sellerId)
    {
        Console.WriteLine($"üîî Admin received SellerProfileDeleted: SellerId={sellerId}");
        
        await InvokeAsync(() =>
        {
            // üî• X·ª¨ L√ù LOCAL: X√≥a seller kh·ªèi c·∫£ 2 list
            var removedFromPending = pendingSellers.RemoveAll(s => s.SellerId == sellerId);
            var removedFromVerified = verifiedSellers.RemoveAll(s => s.SellerId == sellerId);
            
            Console.WriteLine($"üîî Removed {removedFromPending} from pending, {removedFromVerified} from verified");
            
            if (removedFromPending > 0 || removedFromVerified > 0)
            {
                Snackbar.Add("A seller profile was deleted", Severity.Warning);
            }
            
            StateHasChanged();
            return Task.CompletedTask;
        });
    }

    private async void OnSellerProfileVerified(int sellerId, string storeName)
    {
        Console.WriteLine($"üîî Admin received SellerProfileVerified: SellerId={sellerId}, StoreName={storeName}");
        
        await InvokeAsync(async () =>
        {
            try
            {
                // üî• IMPROVED: Fetch fresh data t·ª´ server ƒë·ªÉ ƒë·∫£m b·∫£o accuracy
                var verifiedSeller = await SellerProfileService.GetSellerProfileByIdAsync(sellerId);
                if (verifiedSeller != null && verifiedSeller.IsVerified == true)
                {
                    // T√¨m v√† x√≥a kh·ªèi pending list
                    var pendingSeller = pendingSellers.FirstOrDefault(s => s.SellerId == sellerId);
                    if (pendingSeller != null)
                    {
                        pendingSellers.Remove(pendingSeller);
                        Console.WriteLine($"üîî Removed seller {storeName} from pending list");
                    }
                    
                    // Th√™m v√†o verified list (ho·∫∑c update n·∫øu ƒë√£ c√≥)
                    var existingVerified = verifiedSellers.FirstOrDefault(s => s.SellerId == sellerId);
                    if (existingVerified != null)
                    {
                        var index = verifiedSellers.IndexOf(existingVerified);
                        verifiedSellers[index] = verifiedSeller;
                        Console.WriteLine($"üîî Updated existing seller in verified list: {storeName}");
                    }
                    else
                    {
                        verifiedSellers.Insert(0, verifiedSeller); // Th√™m v√†o ƒë·∫ßu list
                        Console.WriteLine($"üîî Added seller {storeName} to verified list");
                    }
                    
                    Snackbar.Add($"Seller verified: {storeName}", Severity.Success);
                }
                else
                {
                    Console.WriteLine($"üîî Could not fetch verified seller {sellerId} or verification status incorrect, reloading data");
                    await LoadAllData();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"‚ùå Error in OnSellerProfileVerified: {ex.Message}");
                await LoadAllData();
            }
            
            StateHasChanged();
        });
    }

    private async void OnSellerProfileUnverified(int sellerId, string storeName)
    {
        Console.WriteLine($"üîî Admin received SellerProfileUnverified: SellerId={sellerId}, StoreName={storeName}");
        
        await InvokeAsync(async () =>
        {
            try
            {
                // üî• IMPROVED: Fetch fresh data t·ª´ server
                var unverifiedSeller = await SellerProfileService.GetSellerProfileByIdAsync(sellerId);
                if (unverifiedSeller != null && unverifiedSeller.IsVerified != true)
                {
                    // T√¨m v√† x√≥a kh·ªèi verified list
                    var verifiedSeller = verifiedSellers.FirstOrDefault(s => s.SellerId == sellerId);
                    if (verifiedSeller != null)
                    {
                        verifiedSellers.Remove(verifiedSeller);
                        Console.WriteLine($"üîî Removed seller {storeName} from verified list");
                    }
                    
                    // Th√™m v√†o pending list (ho·∫∑c update n·∫øu ƒë√£ c√≥)
                    var existingPending = pendingSellers.FirstOrDefault(s => s.SellerId == sellerId);
                    if (existingPending != null)
                    {
                        var index = pendingSellers.IndexOf(existingPending);
                        pendingSellers[index] = unverifiedSeller;
                        Console.WriteLine($"üîî Updated existing seller in pending list: {storeName}");
                    }
                    else
                    {
                        pendingSellers.Insert(0, unverifiedSeller); // Th√™m v√†o ƒë·∫ßu list
                        Console.WriteLine($"üîî Added seller {storeName} to pending list");
                    }
                    
                    Snackbar.Add($"Seller verification revoked: {storeName}", Severity.Warning);
                }
                else
                {
